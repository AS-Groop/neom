section.statistic__section(style=`background-image:linear-gradient(0deg, rgba(61, 38, 13, 0.9), rgba(61, 38, 13, 0.9)),url('./images/bg_staistic2.jpg')` id="link2")
    .container
        .statistic__content
            .section__title
                span Статистика
            h3.title Пластиковые профили высокого качества!
            p.info Мы упорно работаем каждый день, чтобы сделать жизнь наших клиентов лучше и счастливее
            .statistic__counter
                .statistic__counter-item
                    h1.count(data-val="1") 1+
                    p.text года на рынке
                - statistic = [{count:200,text:'сотрудников'},{count:65,text:'дилерских офисов'},{count:3500,text:'проектов'}]
                each item in statistic
                    .statistic__counter-item
                        h1.count(data-val=item.count) 0+
                        p.text #{item.text}