section.statistic__section(style=`background-image:linear-gradient(0deg, rgba(61, 38, 13, 0.9), rgba(61, 38, 13, 0.9)),url('../images/bg_staistic2.jpg')` id="link2")
    .container
        .statistic__content
            .section__title
                span Statistics
            h3.title High quality plastic profiles!
            p.info We work hard every day to make our customers' lives better and happier
            .statistic__counter
                .statistic__counter-item
                    h1.count(data-val="1") 1+
                    p.text years on the market
                - statistic = [{count:200,text:'employees'},{count:65,text:'dealer offices'},{count:3500,text:'projects'}]
                each item in statistic
                    .statistic__counter-item
                        h1.count(data-val=item.count) 0+
                        p.text #{item.text}